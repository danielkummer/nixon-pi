          %span.glyphicon.glyphicon-bar
          %span.glyphicon.glyphicon-bar
          %span.glyphicon.glyphicon-bar
        %a.navbar-brand{:href => '#'} Nixon-&#960;
      #main-navigation.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li
            %a{href: '/'}
              %i.glyphicon.glyphicon-cogs.pull-left
