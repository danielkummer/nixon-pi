#!/usr/bin/env ruby

# The default environment gets overridden in the application class.
# The only reason we already set it here is because settingslogic is eager-loading the settings file...
$environment = 'development'

begin
  require 'thor'
  require 'nixon_pi'
rescue LoadError => e
  require 'rubygems'
  require 'thor'
  require 'nixon_pi'
end

NixonPi::Cli::Application.start(ARGV)
