.row.row-divider
  .col-md-2
    %h3 Scheduler
  .col-md-6
    %form#scheduler{ action: "/scheduler", method: "POST", class: "form-horizontal", "data-remote" => true}
      %input{type: "hidden", name: "initial", value: "1"}
      .form-group
        %label.control-label
          %i.glyphicon.glyphicon-repeat.glyphicon.glyphicon-large
        .controls
          %select#method{name: "method", class: "chzn-select", "data-placeholder" => "Select Timing", style:"width:300px;"}
            %option
            %option{value: "in"} in
            %option{value: "at"} at
            %option{value: "every"} every
            %option{value: "cron"} cron
      .form-group
        %label.control-label
          %i.glyphicon.glyphicon-time.glyphicon.glyphicon-large
        .controls
          %input#time{type: "text", name: "timing", class: "input-xlarge", }

      .form-group
        %label.control-label
          %i.glyphicon.glyphicon-screenshot.glyphicon.glyphicon-large
        .controls
          %select#receivers{name: "target", class: "chzn-select", "data-placeholder" => "Select receiver", style:"width:300px;"}
            %option
      .form-group
        %label.control-label
          %i.glyphicon.glyphicon-edit.glyphicon.glyphicon-large
        .controls
          %textarea#command{name: "command", rows: "10", class:"input-xlarge"}
      /.form-group
      /  %label.control-label
      /    %i.glyphicon.glyphicon-lock.glyphicon.glyphicon-large
      /  .controls
      /    %label.checkbox
      /      %input{type: "checkbox", name: "lock", class: "input-medium"}
      /      Lock target
      .form-group
        .controls
          %button{type: "submit",class:"btn btn-success"}
            Schedule
  .col-md-4
    #cron{style:"display: none;"}



.row.divider
  .col-md-2
    %h2 Running
  .col-md-6
    -if @schedules.empty?
      %p No jobs
    -else
      %table
        %thead
          %tr
            %td
              %i.glyphicon.glyphicon-repeat.glyphicon.glyphicon-large
            %td
              %i.glyphicon.glyphicon-time.glyphicon.glyphicon-large
            %td
              %i.glyphicon.glyphicon-screenshot.glyphicon.glyphicon-large
            %td
              %i.glyphicon.glyphicon-edit.glyphicon.glyphicon-large
            %td
              %i.glyphicon.glyphicon-lock.glyphicon.glyphicon-large
            %td
        %tbody
        -@schedules.each do |s|
          %tr
            %td=s.method
            %td=s.timing
            %td=s.target
            %td=s.command
            %td=s.lock
            %td
              %a{class:"delete-schedule", href:"#", "data-id" => "#{s.id}"}
                %i.glyphicon.glyphicon-remove-sign
              /%form{:action => "/scheduler/#{s.id}", :method => "post"}
              /  %input{ name:"_method", type:"hidden", value:"delete"}
              /  %button{type: "submit", value: "x"} x




