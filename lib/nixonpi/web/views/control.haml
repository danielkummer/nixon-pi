.span12
  %h2 Tubes
  %form{ :action => "/tubes", :method => "POST"}
    %fieldset
      %ul
        %li
          %label{:for => "value"} Tube values:
          %input{:type => "text", :name => "value", :class => "text"}
      %input{:type => "hidden", :name => "mode", :value => "free_value"}
      %input{:type => "submit", :value => "Send", :class => "button"}
  %hr/

  %form{ :action => "/tubes", :method => "POST"}
    %fieldset
      %ul
        %li
          %label{:for => "value"} Time Format
          %input{:type => "text", :name => "time_format", :class => "text", value: "%H%M%S"}
      %input{:type => "hidden", :name => "mode", :value => "time"}
      %input{:type => "submit", :value => "Send", :class => "button"}
  %hr/

  %form{ :action => "/tubes", :method => "POST"}
    %fieldset
      %ul
        %li
          %label{:for => "body"} Animation:
          %select{:name => "animation_name"}
            %option{:selected => "", :value => "switch_numbers"} switch numbers
            %option{:value => "single_fly_in"} fly in
        %li
          %label{:for => "value"} Options (Hash)
          %input{:type => "text", :name => "animation_options", :class => "text"}
      %input{:type => "hidden", :name => "mode", :value => "tube_animation"}
      %input{:type => "submit", :value => "Send", :class => "button"}
  %hr/

  %form{ :action => "/tubes", :method => "POST"}
    %fieldset
      %ul
        %li
          %label{:for => "body"} Countdown:
        %li
          %label{:for => "value"} Duration
          %input{:type => "text", :name => "value", :class => "text"}
      %input{:type => "hidden", :name => "mode", :value => "countdown"}
      %input{:type => "submit", :value => "Send", :class => "button"}
      .examples
        %p 12.4 secs, 4:01:01, 3 mins 4 sec, 2 hrs 20 min, 2h20min, 3 weeks and 2 days
    %hr/

  %form{ :action => "/tubes", :method => "POST"}
    %fieldset
      %ul
        %li
          %label{:for => "body"} Test:
      %input{:type => "hidden", :name => "mode", :value => "test"}
      %input{:type => "submit", :value => "Test", :class => "button"}
.one-fourth.column
  %h3 Bar Control
  .bar-control
    %form{ :action => "/bars", :method => "POST"}
      %fieldset
        %ul
          %li
            %label{:for => "value"} Bar values:
          -@bars.each do |bar|
            0
            %input{:type => "range", :name => "values[]", :class => "range", min: "0", max: "255", value: "0"}
            100%
            %br
        %input{:type => "hidden", :name => "mode", :value => "free_value"}
        %input{:type => "submit", :value => "Send", :class => "button"}
  %hr/

  %form{ :action => "/bars", :method => "POST"}
    %fieldset
      %ul
        %li
          %label{:for => "body"} Animation:
          %select{:name => "animation_name"}
            %option{:selected => "", :value => "ramp_up_down"} ramp up / down
        %li
          %label{:for => "value"} Options (Hash)
          %input{:type => "text", :name => "animation_options", :class => "text"}
      %input{:type => "hidden", :name => "mode", :value => "bar_animation"}
      %input{:type => "submit", :value => "Send", :class => "button"}

.one-fourth.column
  %h3 Lamp Control
  %form{ :action => "/lamps", :method => "POST"}
    %fieldset
      %ul
        %li
          %label{:for => "value"} Lamp values:
        -@lamps.each do |lamp|
          off
          %input{:type => "range", :name => "values[]", :class => "range", min: "0", max: "1", value: "0"}
          on
          %br
      %input{:type => "hidden", :name => "mode", :value => "free_value"}
      %input{:type => "submit", :value => "Send", :class => "button"}
  %hr/

.one-fourth.column
  %h3 Speech Control
  %form{ :action => "/say", :method => "POST"}
  %fieldset
    %ul
      %li
        %label{:for => "value"} Say what?:
        %input{:type => "text", :name => "value", :class => "text"}

    %input{:type => "submit", :value => "Send", :class => "button"}