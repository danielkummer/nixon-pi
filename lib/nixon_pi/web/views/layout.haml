          %li{style:'height:30px;'}
            %a{href: '/scheduler.html'}
              %i.glyphicon.glyphicon-tasks.pull-left
              Scheduler
          %li{style:'height:30px;'}
            %a{href: '/logs.html'}
              %i.glyphicon.glyphicon-list-alt.pull-left
              Log
          %li{style:'height:30px;'}
